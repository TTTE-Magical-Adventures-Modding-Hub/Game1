on exitFrame  global answerloop, stage  set ans to answercheck()  if ans = 1 then    set answerloop to answerloop + 1    if answerloop > (stage + stage) then      set stage to stage + 1      if stage = calcsoundlength() then        go("seikai")        exit      else        puppetSound(1, "daiseikai")        sndply2()        go(the frame + 1)        exit      end if    else      go("твьі2")      exit    end if  else    go("huseikai")  end ifendon sndply2  global stage  repeat while soundBusy(1)  end repeat  set sndno to stage + 3  puppetSound(1, sndno)  repeat while soundBusy(1) = 1  end repeatend