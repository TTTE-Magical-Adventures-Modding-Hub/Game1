on beginSprite me  global clickstopflag  set clickstopflag to "No"endon mouseDown me  global debugmode, buttonlist, answer, answerloop, stage, wheretogo, clickstopflag, soundnumber, maxclicknum, qnum, mdownspnum  if debugmode = "ON" then    set mdownspnum to the currentSpriteNum    if wheretogo = "huseikai" then      repeat while soundBusy(1) = 1      end repeat      go("huseikai")      exit    else      if clickstopflag = "No" then        if soundBusy(1) = 1 then          puppetSound(1, 0)          sendAllSprites(#lightoff)        end if        sendSprite(the currentSpriteNum, #lighton)        set n to the currentSpriteNum - 21        set str1 to "SoBad" & n        puppetSound(1, str1)        repeat while soundBusy(1) = 1          nothing()        end repeat        sendSprite(the currentSpriteNum, #lightoff)        set ans to 1        if ans = 1 then          set answerloop to answerloop + 1          if qnum = 2 then            set loopnum to stage * 2            if loopnum > maxclicknum then              set loopnum to maxclicknum            end if          else            set loopnum to stage          end if          if answerloop > loopnum then            set stage to stage + 1            set clickstopflag to "Yes"            if answerloop > maxclicknum then              set wheretogo to "seikai"            else              set wheretogo to "èoëË"            end if          else            exit          end if        else          set wheretogo to "huseikai"        end if      end if      go("Jump")    end if  else    sendSprite(the currentSpriteNum, #lighton)    set n to the currentSpriteNum - 21    set str1 to "SoBad" & n    puppetSound(1, str1)    repeat while soundBusy(1) = 1      nothing()    end repeat    sendSprite(the currentSpriteNum, #lightoff)    go("huseikai")  end ifend